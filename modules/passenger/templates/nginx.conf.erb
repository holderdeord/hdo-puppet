user                              www-data;
worker_processes                  auto;
pid                               /var/run/nginx.pid;

events {
  worker_connections              1024;
  # multi_accept                  on;
}

http {
  sendfile                        on;
  tcp_nopush                      on;
  tcp_nodelay                     on;
  keepalive_timeout               75s;
  types_hash_max_size             2048;
  client_max_body_size            25m;
  client_body_buffer_size         128k;

  server_tokens                   off;
  # server_names_hash_bucket_size 64;
  # server_name_in_redirect       off;

  include                         <%= @config_dir %>/mime.types;
  default_type                    application/octet-stream;

  #
  # X-Client-Country (http://en.wikipedia.org/wiki/ISO_3166-1) provided by Fastly: https://fastly.zendesk.com/entries/22381546-What-GeoIP-features-are-available-
  #
  log_format                      custom '$remote_addr/$http_x_forwarded_for - $remote_user [$time_local] "$request" $status $body_bytes_sent "$http_referer" "$http_user_agent" $http_x_client_country';

  access_log                      <%= @log_dir %>/access.log custom;
  error_log                       <%= @log_dir %>/error.log;

  gzip                            on;
  gzip_disable                    "msie6";

  gzip_vary                       on;
  gzip_http_version               1.1;
  gzip_proxied                    any;
  gzip_min_length                 1100;
  gzip_comp_level                 3;
  gzip_buffers                    16 8k;
  gzip_types                      text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript;

  #
  # http://www.modrails.com/documentation/Users%20guide%20Nginx.html
  #

  passenger_root                 <%= scope.lookupvar('passenger::params::root') %>;
  passenger_ruby                 <%= scope.lookupvar('passenger::params::ruby') %>;
  passenger_max_pool_size        <%= scope.lookupvar('passenger::params::max_pool_size') %>;
  passenger_pool_idle_time       <%= scope.lookupvar('passenger::params::pool_idle_time') %>;
  passenger_friendly_error_pages off;

  proxy_cache_path               /tmp/nginx/hdo     levels=1:2    keys_zone=hdo:256m    inactive=30d;

  ssl_protocols                  TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers                    'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:AES128-SHA256:AES256-SHA256:AES128-SHA:AES256-SHA:AES:CAMELLIA:DES-CBC3-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!aECDH:!EDH-DSS-DES-CBC3-SHA:!EDH-RSA-DES-CBC3-SHA:!KRB5-DES-CBC3-SHA';
  ssl_prefer_server_ciphers      on;

  ssl_certificate                /opt/nginx/ssl/star.holderdeord.no.cer;
  ssl_certificate_key            /opt/nginx/ssl/star.holderdeord.no.key;

  # Generate this using `openssl dhparam -out dhparams.pem 2048` - see https://weakdh.org/sysadmin.html
  ssl_dhparam                    /opt/nginx/ssl/star.holderdeord.no.dhparams.pem;

  ssl_session_cache              shared:SSL:10m;
  ssl_session_timeout            5m;

  # virtual hosts
  include                        <%= @sites_dir %>/*.conf;
}
