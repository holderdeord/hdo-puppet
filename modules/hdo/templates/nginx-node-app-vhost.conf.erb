proxy_cache_path /tmp/nginx/<%= @app_name %> levels=1:2 keys_zone=<%= @app_name %>:10m inactive=1d;

server {
  listen         80;
  server_name    <%= @server_name %>;
  root           <%= @public_root %>;
  try_files      $uri @node;

  location @node {
    proxy_cache_key    "$scheme$request_method$host$request_uri";
    proxy_cache        <%= @app_name %>;
    proxy_cache_bypass $http_cache_control;                  # respect Cache-Control=no-cache from the client
    add_header         X-Proxy-Cache $upstream_cache_status; # set HIT/MISS/BYPASS in response

    proxy_set_header   X-Real-IP $remote_addr;
    proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header   Host $http_host;
    proxy_set_header   X-Nginx-Proxy true;


    <% if @restrict %>
      auth_basic           "Restricted";
      auth_basic_user_file /opt/nginx/.htpasswd;
    <% end %>

    proxy_pass         http://127.0.0.1:<%= @port %>;
    proxy_redirect     off;
  }
}


