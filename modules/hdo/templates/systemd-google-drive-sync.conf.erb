[Unit]
Description=<%= @app_name %>
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=forking
ExecStart=/bin/bash -c 'google-drive-sync --out-dir <%= @output_dir %> --credentials <%= @credentials_path %> --plugins <%= @plugin_path %> --interval <%= @interval %> --state <%= @state_path %>'
ExecStop=/bin/kill -s QUIT $MAINPID
KillMode=control-group
PrivateTmp=true
Restart=on-abort
User=<%= @user %>
StandardOutput=<%= @log_path %>
StandardError=inherit

[Install]
WantedBy=multi-user.target