server {
  listen      80;
  listen      443 ssl;

  server_name <%= @server_name %>;
  root        <%= @blog_root %>/_site;
  autoindex   off;

  <% if @ssl %>
    <%= scope.function_template(['hdo/nginx-ssl-conf.erb']) %>
  <% end %>

  location ~ ^/(google.+\.html|robots\.txt) {  }

  location / {
    auth_basic 'Restricted';
    auth_basic_user_file /opt/nginx/.htpasswd;
  }
}
