description <%= @description %>
author      <%= @author %>

start on filesystem and net-device-up IFACE!=lo
stop on shutdown
respawn
respawn limit 20 5


script
  exec google-drive-sync \
    --out-dir <%= @output_dir %> \
    --credentials <%= @credentials_path %> \
    --plugins <%= @plugin_path %> \
    --interval <%= @interval %> \
    --state <%= @state_path %> \
    ><%= @log_path %> 2>&1
end script

post-start script
   echo "started <%= @description %>"
end script
